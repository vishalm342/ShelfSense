NODE_ENV=development
PORT=8000
DATABASE_URL=postgresql://username:password@localhost:5432/shelfsense

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Database Configuration (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shelfsense
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google Books API Configuration
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_NAME=gemini-1.5-pro

# Setup Configuration (for initial database setup - generate a random string)
SETUP_SECRET_KEY=your_random_secret_key_for_database_setup